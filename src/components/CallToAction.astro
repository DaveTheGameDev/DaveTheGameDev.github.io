---
interface Props {
    href: string;
}

const { href } = Astro.props;
---

<a href={href}>
    <button
        type="button"
        class="inline-flex items-center gap-x-4 rounded-md bg-indigo-600 px-3.5 py-2.5 text-lg font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600"
    >
        <slot />
    </button>
</a>
