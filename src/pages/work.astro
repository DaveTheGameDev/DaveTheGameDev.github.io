---
import { getCollection } from "astro:content";

import BaseLayout from "../layouts/BaseLayout.astro";

import PortfolioPreview from "../components/PortfolioPreview.astro";
import Hero from "../components/Hero.astro";
import Grid from "../components/Grid.astro";

const projects = (await getCollection("work")).sort(
    (a, b) => b.data.publishDate.valueOf() - a.data.publishDate.valueOf(),
);
---

<BaseLayout
    title="My Work | David Cauchi"
    description="Learn about David Cauchi's most recent projects"
>
     <div class="mx-auto -mt-12 max-w-7xl px-6 sm:mt-0 lg:px-8 xl:-mt-8 pb-24">
        <div class="pt-12 sm:pt-12 prose prose-zinc prose-xl dark:prose-invert">
            <div>
                <h2 class="">Projects</h2>
                
            </div>
        </div>
            <Grid variant="offset">
                {
                    projects.map((project) => (
                        <li class="py-4">
                            <PortfolioPreview project={project} />
                        </li>
                    ))
                }
            </Grid>
        </main>
    </div>
</BaseLayout>
